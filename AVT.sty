\newcommand{\RegisterPairedDelimiter}[3][1]{
\ifnum#1=1 \newcommand{#2}[2][-1]{%
\ifnum##1=-1 #3*{##2}\relax\fi%
\ifnum##1=0 #3{##2}\relax\fi%
\ifnum##1=1 #3[\big]{##2}\relax\fi%
\ifnum##1=2 #3[\Big]{##2}\relax\fi%
